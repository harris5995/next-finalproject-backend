// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  tops     Tops[]
  bottoms  Bottoms[]
  shoes    Shoes[]
  accessories Accessories[]
}

model Tops {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
}

model Bottoms {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
}

model Shoes {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
}

model Accessories {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
}