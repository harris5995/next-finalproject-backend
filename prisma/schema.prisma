// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  tops     Tops[]
  bottoms  Bottoms[]
  shoes    Shoes[]
  accessories Accessories[]
  accs        Accs[]
  outfits     Outfits[]
}

model Tops {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
  outfits       Outfits[]
}

model Bottoms {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
  outfits      Outfits[]
}

model Shoes {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
  outfits       Outfits[]
}

model Accessories {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
}

model Accs {
  id           Int     @id @default(autoincrement())
  user         User @relation(fields: [user_id], references: [id])
  user_id      Int
  name         String?
  description  String?
  url          String @unique
  brand        String?
  color        String?
  size         String?
  occasion     String?
  material     String?
  outfits      Outfits[]
}

model Outfits {
  id         Int     @id @default(autoincrement())
  user       User @relation(fields: [user_id], references: [id])
  tops       Tops @relation(fields: [tops_id], references: [id])
  bottoms    Bottoms @relation(fields: [bottoms_id], references: [id])
  shoes      Shoes @relation(fields: [shoes_id], references: [id])
  accs       Accs @relation(fields: [accs_id], references: [id])
  user_id    Int
  tops_id    Int
  bottoms_id Int
  shoes_id   Int
  accs_id    Int
  date       DateTime
}